@model PF.Models.BusquedaClienteModelView

@{
    ViewBag.Title = "Index";
}
<h1>Cliente</h1>
<div class="row">
                <p>
                    @Html.ActionLink("Crear un cliente nuevo", "Create", null, new { @class = "btn btn-default" })
                </p>
                    <div class="col-lg-4">
                        <div class="panel panel-heading">
                            <div class="page-header">
                                <h5>Busqueda por Nombre del Cliente</h5>
                            </div>
                            <div class="panel-body">
                                <div class="container">
                                    @using (Ajax.BeginForm("BuscaNombre", "clientes", null, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "ajaxtarget", LoadingElementId = "image_loading", InsertionMode = InsertionMode.Replace }, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-error" })
                                        <div class="form-group">
                                            @Html.LabelFor(t => t.NombreBuscar, new { @class = "col-md-2 control-label" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(t => t.NombreBuscar, new { @style = "width : 400px" })
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-2 col-lg-10">
                                                    <input type="submit" class="btn btn-default" value="Buscar" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <img class="loadercentrado" id="image_loading" src="~/imgs/loading.gif" width="30" height="30" style="display:none" />
                </div>
                <div id="ajaxtarget"></div>
