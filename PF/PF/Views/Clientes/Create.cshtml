@model PF.Models.Cliente

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Cliente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RNC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RNC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RNC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoClienteId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TipoClienteId, ViewData["tipos"] as SelectList, "--SELECCIONE EL TIPO DE CLIENTES", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoClienteId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                    Telefonos
                </a>
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
            <div class="panel-body"></div>

            <form class="form-inline">
                <div class="form-group">
                    <label for="Telefono">Telefono</label>
                    <input type="text" id="Telefono" class="form-control" width="100" />
                    <span class="error">El telefono es requerido</span>
                </div>
                <div class="form-group">
                    <label for="Tipo">Tipo</label>
                    <input type="text" id="Tipo" class="form-control" width="100" />
                    <span class="error">El tipo es requerido</span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="TelPrincipal" value="1" class="form-control" /> Principal
                        </label>
                    </div>
                    <span class="error"></span>
                </div>
                <div class="form-group">
                    <input type="button" id="addTel" value="Agregar" class="btn btn-primary form-control" />
                </div>
            </form>
            <br />
            <div id="TelItems" class="container">
            </div>
        </div>
    </div>
</div>
<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                    Dirreciones
                </a>
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
            <div class="panel-body"></div>

            <form class="form-inline">
                <div class="form-group">
                    <label for="Provincia">Provincia</label>
                    <input type="text" id="Provincia" class="form-control" width="100" />
                    <span class="error">La provincia es requerido</span>
                </div>
                <div class="form-group">
                    <label for="Municipio">Municipio</label>
                    <input type="text" id="Municipio" class="form-control" width="100" />
                    <span class="error">El municipio es requerido</span>
                </div>
                <div class="form-group">
                    <label for="Barrio">Barrio</label>
                    <input type="text" id="Barrio" class="form-control" width="100" />
                    <span class="error">El barrio es requerido</span>
                </div>
                <div class="form-group">
                    <label for="Calle">Calle</label>
                    <input type="text" id="Calle" class="form-control" width="100" />
                    <span class="error">La calle es requerido</span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="DirPrincipal" value="1" class="form-control" /> Principal
                        </label>
                    </div>
                    <span class="error"></span>
                </div>
                <div class="form-group">
                    <input type="button" id="addDir" value="Agregar" class="btn btn-primary form-control" />
                </div>
            </form>
            <br />
            <div id="dirreccionesItems" class="container">
            </div>
        </div>
    </div>
</div>
<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                    Email
                </a>
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
            <div class="panel-body"></div>

            <form class="form-inline">
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" id="Email" class="form-control" width="100" />
                    <span class="error">El email es requerido</span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="EmailPrincipal" value="1" class="form-control" /> Principal
                        </label>
                    </div>
                    <span class="error"></span>
                </div>
                <div class="form-group">
                    <input type="button" id="addEmail" value="Agregar" class="btn btn-primary form-control" />
                </div>
            </form>
            <br />
            <div id="emailItems" class="container">
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/Listas.js")"></script>
    <script src="@Url.Content("~/Scripts/FuncionesCliente.js")"></script>
    <script>
        $(document).ready(function () {
            $('#addTel').click(addTel_Click);
            $('addDir').click(addDir_Click);
            $('addEmail').click(addEmail_Click);
            $('#submit').click(crear_Click);
        })
    </script>
}
